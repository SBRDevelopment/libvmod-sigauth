varnishtest "Test sigauth vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import sigauth from "${vmod_topbuild}/src/.libs/libvmod_sigauth.so";

	sub vcl_deliver {
		set resp.http.sigstring = sigauth.sigstring();
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.sigstring == "Hello, World"
}

client c1 -run
